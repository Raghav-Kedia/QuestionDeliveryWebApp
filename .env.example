# Database (PostgreSQL)
# With Supabase, use pooled port for DATABASE_URL (e.g., 6543) and direct port for DIRECT_URL (5432)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:6543/postgres?pgbouncer=true&connection_limit=1"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/postgres"

# Auth
AUTH_SECRET="replace-with-a-long-random-string"

## Unlock Interval (minutes)
# Optional: default is 30 if unset. Exposed variant (NEXT_PUBLIC_) allows client display without hard-coding.
UNLOCK_INTERVAL_MINUTES=1
NEXT_PUBLIC_UNLOCK_INTERVAL_MINUTES=1

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="public-anon-key"
SUPABASE_SERVICE_KEY="service-role-key"
